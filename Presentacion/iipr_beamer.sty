% Python style for highlighting
\newcommand\pythonstyle{\lstset{
	language=Python,
	basicstyle=\ttm,
	commentstyle=\ttfamily\color{deepgreen},
	otherkeywords={self},             % Add keywords here
	keywordstyle=\ttb\color{deepblue},
	emph={MyClass,__init__},          % Custom highlighting
	emphstyle=\ttb\color{deepred},    % Custom highlighting style
	stringstyle=\color{deepgreen},
	breaklines=true,                 % sets automatic line breaking
	frame=tbrl,                         % Any extra options here
	numbers=left,                    % where to put the line-numbers; possible values are (none, left, right)
	numbersep=8pt,                   % how far the line-numbers are from the code
	numberstyle=\sttm\color{gray}, % the style that is used for the line-numbers
	%rulecolor=\color{black},
	title=\lstname,
	%linewidth=14.5cm,
	showstringspaces=false
}}
% Python for external files
\newcommand\pythonexternal[2][]{{
	\pythonstyle
	\lstinputlisting[#1]{#2}
}}
% Sage style for highlighting
\newcommand\sagestyle{\lstset{
	language=Python,
	basicstyle=\ttm,
	commentstyle=\ttfamily\color{deepgreen},
	stringstyle=\color{deepgreen},
	breaklines=true,                 % sets automatic line breaking
	frame=tbrl,                         % Any extra options here
	rulecolor=\color{black},    %%% <--- here
	%literate={\$}{{\textcolor{deepgreen}{\$}}}1,
	linewidth=14.9cm,
	showstringspaces=false
}}
%Sage for inline
\newcommand\sageinline[1]{{\sagestyle\lstinline!#1!}}
%Sage environment
\lstnewenvironment{sage}[1][]
{
	\sagestyle
	\lstset{#1}
}
