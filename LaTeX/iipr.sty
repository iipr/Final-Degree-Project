%________________THEOREM-LIKE ENVIROMENTS________________

\declaretheoremstyle[bodyfont=\normalfont]{defn}
\declaretheoremstyle[headfont=\normalfont\itshape]{prove}    %Style for proofs

\declaretheorem[numberwithin=chapter,style=defn,name=Example,refname={example,example},Refname={Example,Examples}]{example}    % Example
\declaretheorem[numberwithin=chapter,name=Corolary,refname={corolary},Refname={Corolary}]{corolary}    % Corolary
\declaretheorem[numberwithin=chapter,name=Proposition,refname={proposition,propositions},Refname={Proposition,Proposition}]{proposition}    % Proposition
\declaretheorem[numbered=no,style=remark,name=Note,refname={note,notes},Refname={Note,Notes}]{note}    %Note
\declaretheorem[numberwithin=chapter,name=Lemma,refname={lemma,lemmas},Refname={Lemma,Lemmas},style=defn]{lemma}    % Lemma
\declaretheorem[numberwithin=chapter,name=Definition,refname={definition,definitions},Refname={Definition,Definitions},style=defn]{definition}    % Definition
\declaretheorem[numberwithin=chapter,name=Theorem,refname={theorem,theorems},Refname={Theorem,Theorems},style=defn]{theorem}    %Theorem
\declaretheorem[numberwithin=chapter,name=Observation,refname={observation,observations},Refname={Observation,Observations}]{observation}    % Observation
\declaretheorem[numbered=no,name=Consequence,refname={consequence,consequences},Refname={Consequence,Consequences}, style=remark]{consequence}    %Consequence
\declaretheorem[numbered=no,name=Notation,refname={notation,notations},Refname={Notation,Notations},style=remark]{notation}    % Notation
\declaretheorem[numbered=no,name=Solution,style=defn]{solution}	   % Solution
\declaretheorem[numbered=no,name=Counterexample,refname={counterexample,counterexamples},Refname={Counterexample,Counterexamples},style=remark]{contraejemplo}    % Counterexample
\declaretheorem[numberwithin=chapter,name=Principle,refname={principle,principles},Refname={Principle,Principles}]{principio}    % Principle
\declaretheorem[numbered=yes,name=Exercise,refname={exercise,exercises},Refname={Exercise,Exercises},style=defn,thmbox=L]{exercise}    % Exercise
\declaretheorem[numbered=no,name=Assertion,refname={assertion,assertion},Refname={Assertion,Assertions}]{aserto}    % Assertion
\declaretheorem[numberwithin=chapter,name=Remark,refname={remark,remarks},Refname={Remark,Remarks},style=defn]{remark}    % Remark
\declaretheorem[numbered=no,name=Proof,style=prove]{Proof}    % Proof